<%= render 'shared/errors', object: @comment %>

<%= form_with model: [@article, @comment], data: {turbo: false} do |f| %>
 
  <div class="mt-3 mb-3 row">    
    <%= f.label :author, class: 'fst-italic col-sm-2 col-form-label' %>
    
    <div class="col-sm-10">
      <%= f.text_field :author, class: 'form-control'%>
    </div>
  </div>

  <div class="mb-3 row">
    <%= f.label :body, class: 'fst-italic col-sm-2 col-form-label'%>

    <div class="col-sm-10">
      <%= f.text_area :body, class: 'form-control' %>
    </div>
  </div>
      
  <div class="row">
    <div class="d-flex justify-content-end mt-0 mb-3">    
      <%= f.submit t('.button'), class: 'btn btn-outline-primary btn-sm me-1'%> 
      
    </div>
  </div>
<% end %>
      