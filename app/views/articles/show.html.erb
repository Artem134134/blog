  <h3><%= @article.title %></h3> 

  <p><strong><%= @article.text %></strong></p> 

  <time datetime="<%= @article.formatted_created_at %>"><small>
		<%= @article.formatted_created_at %></small></time>
    <hr>      
    
      <h4 class="mb-3 mt-0">All <span class="badge rounded-pill text-bg-secondary">comments</span></h4>
      
      <% @comments.each do |comment| %>
      <div class="mb-0 mt-0">
        <p><i>Author  <strong><%= comment.author %></strong></i></p>
        <p><i><%= comment.body %></i></p>

        <time datetime="<%= comment.formatted_created_at %>"><small>
		    <%= comment.formatted_created_at %></small></time> 
      </div>
      <hr> 
      <% end %>
          
      <h4 class="mb-0 mt-4">Comment <span class="badge rounded-pill text-bg-secondary">add</span></h4>
      
      <%= form_with model: [@article, @comment], data: {turbo: false} do |f| %>
        <%= render 'shared/errors', object: @comment %>
        <div class="mt-3 mb-3 row">    
          <%= f.label :author, class: 'fst-italic col-sm-2 col-form-label' %>

          <div class="col-sm-10">
            <%= f.text_field :author, class: 'form-control'%>
          </div>
        </div>

        <div class="mb-3 row">
          <%= f.label :body, class: 'fst-italic col-sm-2 col-form-label'%>

          <div class="col-sm-10">
          <%= f.text_area :body, class: 'form-control' %>
          </div>
        </div>
      
      <div class="row">
      <div class="col-sm-8"></div>
        <div class="col-sm-4">
          <div class="d-flex justify-content-end mt-0 mb-3">    
            <%= f.submit 'Save comment', class: 'btn btn-outline-primary btn-sm me-2'%> 
            <%= link_to 'Back', articles_path, class: 'btn btn-outline-secondary btn-sm' %>
          </div>
        </div>
    </div>
      <% end %>
      