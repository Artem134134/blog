  <h3><%= @article.title %></h3> 

  <p><strong><%= @article.text %></strong></p> 

  <time datetime="<%= @article.formatted_created_at %>"><small>
		<%= @article.formatted_created_at %></small></time>
    <hr>      
    

      <h3><span class="badge rounded-pill text-bg-secondary">Comments</span></h3>
      <br>
      <% @article.comments.each do |comment| %>
      <div>
        <p><i>Author  <strong><%= comment.author %></strong></i></p>
        <p><i><%= comment.body %></i></p>

        <time datetime="<%= comment.formatted_created_on %>"><small>
		    <%= comment.formatted_created_on %></small></time> 
      </div>
      <hr> 
      <% end %>
          
      <h4>Comment <span class="badge rounded-pill text-bg-secondary">add</span></h4>
    
      
      <%= form_with(model: [@article, @article.comments.build], local: true) do |f| %>
        <%= render 'shared/errors', object: @comments %> <!-- bug - не выводит ошибки на экран -->
        <div>  
        <p>
          <%= f.label :author %><br />
          <%= f.text_field :author, size: "47x1"%>
        </p>

        <p>
          <%= f.label :body %><br />
          <%= f.text_area :body,  size: "50x1" %>
        </p>

      <nav class="mb-4">    
        <%= f.submit 'Save comment', class: 'btn btn-outline-primary btn-sm me-1'%>   
        <%= link_to 'Cancel', article_path, class: 'btn btn-outline-light btn-sm me-1' %>
        <%= link_to 'Back', articles_path, class: 'btn btn-outline-secondary btn-sm' %>
      </nav>


      </div>
      <% end %>
      