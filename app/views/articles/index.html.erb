  <nav>
    <%= link_to 'Contact Us!', new_contacts_path(@contact) %> |
    <%= link_to 'About', about_path(@about) %> |
    <%= link_to 'Terms', terms_path(@terms) %> |
  </nav>
  <br> 
    <h2>List of <span class="badge rounded-pill text-bg-secondary">articles</span></h2>
      <% @articles.each do |article| %>
      <div>
        <p><strong><%= article.title %></strong></p>
        <p><%= article.text %></p>
        <time datetime="<%= article.formatted_created_at %>"><small>
		      <%= article.formatted_created_at %></small></time>
          <br>
          <br>
        
        <nav>
          <%= link_to 'Show', article_path(article), class: 'btn btn-outline-info btn-sm' %>  
          <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-outline-warning btn-sm' %>  
          <%= link_to 'Delete', article_path(article), class: 'btn btn-outline-danger btn-sm',
          data: { turbo_confirm: 'Are you sure?', turbo_method: :delete } %> 
        </nav> 
        <hr>
    </div>    
    <% end %>
    
    <div>
      <h3>Article <span class="badge rounded-pill text-bg-secondary">New</span></h3>
      <p><%= render 'form_article', article: @article %></p>
    </div>