<!DOCTYPE html>
<html>
  <head>

    <title>Edit</title>

  </head>

      <body>

      <h2>Edit article</h2>

      <%= form_for :article, url: article_path(@article), method: :put, data: {turbo:false} do |f| %>
        <p>
          <%= f.label :title %><br />
          <%= f.text_field :title %>
        </p>

        <p>
          <%= f.label :text %><br />
          <%= f.text_area :text %>
        </p>

          
        <p>
          <%= f.submit ('Submit changes')%>
        </p>

      <% end %>

      </body> 
</html>