<!DOCTYPE html>
<html>
  <head>

    <title>Edit</title>

  </head>

      <body>

      <h2>Edit article</h2>

      <%= form_with model: @article, local: true do |f| %>
        <p>
          <%= f.label :title %><br />
          <%= f.text_field :title, size: "47x1" %>
        </p>

        <p>
          <%= f.label :text %><br />
          <%= f.text_area :text, size: "50x2" %>
        </p>

          
        <p>
          <%= f.submit ('Submit changes')%>
        </p>

      <% end %>

      </body> 
</html>