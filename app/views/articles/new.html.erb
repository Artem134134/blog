<!DOCTYPE html>
<html>
  <head>

    <title>New article</title>

  </head>

      <body>

      <h2>New article</h2><br />

      <%= form_with model: @article, data: {turbo:false} do |f| %>
        <p>
          <%= f.label :title %><br />
          <%= f.text_field :title, size: "47x1" %>
        </p>

        <p>
          <%= f.label :text %><br />
          <%= f.text_area :text, size: "50x2" %>
        </p>
        </p>

          
        <p>
          <%= f.submit ('Save article')%>
        </p>

      <% end %>

      </body> 
</html>