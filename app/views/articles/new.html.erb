<!DOCTYPE html>
<html>
  <head>

    <title>New article</title>

  </head>

      <body>

      <h2>New article</h2><br />

      <%= form_for :article, url: articles_path, data: {turbo:false} do |f| %>
        <p>
          <%= f.label :title %><br />
          <%= f.text_field :title %>
        </p>

        <p>
          <%= f.label :text %><br />
          <%= f.text_area :text %>
        </p>

          
        <p>
          <%= f.submit ('Save article')%>
        </p>

      <% end %>

      </body> 
</html>