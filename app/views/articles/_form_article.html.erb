

<%= form_with model: @article, data: {turbo: false} do |f| %>
  <% if @article && @article.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <ul class="mb-0">
          <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
          <% end %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, size: "47x1" %>
  </p>

  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text, size: "50x2" %>
  </p>
    
  <nav class="mt-3">    
    <%= f.submit ' Save ', class: 'btn btn-outline-primary btn-sm'%>   
  </nav>

<% end %>