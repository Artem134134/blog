

<%= form_with model: @article, data: {turbo: false} do |f| %>
  <%= render 'shared/errors', object: @article %>

  <div class="mb-3 row">
    <%= f.label :title, class: 'col-sm-1 col-form-label' %>

    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control' %>
    </div>  
  </div>

  <div class="mb-3 row">
    <%= f.label :text, class: 'col-sm-1 col-form-label' %>
  
    <div class="col-sm-10">
      <%= f.text_area :text , class: 'form-control' %>
    </div>  
  </div>
  
  <div class="me-5 row">
    <div class="col-sm-10"></div>
    <div class="col-sm-2 text-end">
      <nav class="ms-0"> 
        <%= f.submit ' Save ', class: ' btn btn-outline-primary btn-sm'%>   
      </nav>   
    </div>
  </div>

<% end %>