
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mt-4 mb-3 row">    
    <%= f.label :email, class: 'fst-italic col-sm-2 col-form-label' %>

  <div class="col-sm-10">    
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>
</div>

<div class="mb-0 row">
  <%= f.label :password, class: 'fst-italic col-sm-2 col-form-label'%>

  <div class="col-sm-10">
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
  </div>
</div>

<% if devise_mapping.rememberable? %>
<div class="col-sm-10">
  <div class="  mt-0 mb-0">
    <%= f.check_box :remember_me  %>
    <%= f.label :remember_me, class: 'fst-italic col-form-label' %>
  </div>
</div>
<% end %>
    
    <div class="row">
    <div class="col-sm-8"></div>
      <div class="col-sm-4">
        <div class="d-flex justify-content-end mt-0 mb-0">    
          <%= f.submit "Log in", class: 'btn btn-outline-primary btn-sm me-0'%> 
        
        </div>
      </div>
  </div>
<% end %>

<div class="mt-0 mb-0 row">
  <%= render "devise/shared/links" %>
</div>