<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mt-4 mb-3 row"> 
    <%= f.label :email, class: 'fst-italic col-sm-2 col-form-label' %>

    <div class="col-sm-10">   
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="mb-3 row">
    <%= f.label :password, class: 'fst-italic col-sm-2 col-form-label' %> <i>(leave blank if you don't want to change it)</i><br />
    
    <div class="col-sm-10">
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
    
    </div>    
  </div>    
    <% end %>
  
  <div class="mt-0 mb-3 row"> 
    <%= f.label :password_verification, class: 'fst-italic col-sm-2 col-form-label' %>
    
    <div class="col-sm-10">
      <%= f.password_field :password_verification, autocomplete: "new-password", class: 'form-control' %>
    </div>
  </div>

  <div class="mt-0 mb-3 row"> 
    <%= f.label :current_password, class: 'fst-italic col-sm-2 col-form-label' %> <i>(we need your current password to confirm your changes)</i><br />
    
    <div class="col-sm-10">  
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
    </div>  
  </div>

  <div class="row">
    <div class="col-sm-8"></div>
      <div class="col-sm-4">
        <div class="d-flex justify-content-end mt-0 mb-0"> 
          <%= f.submit "Update" %>
        </div>
    </div>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
