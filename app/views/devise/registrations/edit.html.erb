<% currently_at t('.register_an_account') %>
<% provide :page_title, t('.register_an_account') %>

<h2 class="text-center">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_with(model: resource, url: registration_path(resource_name), method: :put, data: { turbo: false }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mt-4 mb-3 row"> 
    <%= f.label :email, class: 'fst-italic col-sm-2 col-form-label' %>

    <div class="col-sm-10">   
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>
  </div>

  <div class="mt-4 mb-3 row">
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="col-sm-10"> 
      <%= t('.waiting', email: resource.unconfirmed_email) %></div>
    </div>
  </div>
  <% end %>

  <div class="mb-3 row">
     <%= f.label :password, class: 'fst-italic col-sm-2 col-form-label' %><i><%= t('.hint1') %></i><br />
    
    <div class="col-sm-10">
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
    
    </div>    
  </div>    
    <% end %>
  
  <div class="mt-0 mb-3 row"> 
    <%= f.label :password_verification, class: 'fst-italic col-sm-2 col-form-label' %>
    
    <div class="col-sm-10">
      <%= f.password_field :password_verification, autocomplete: "new-password", class: 'form-control' %>
    </div>
  </div>

  <div class="mt-0 mb-3 row"> 
    <%= f.label :current_password, class: 'fst-italic col-sm-2 col-form-label' %> <i><%= t('.hint2') %></i><br />
    
    <div class="col-sm-10">  
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
    </div>  
  </div>

  <div class="row">
    <div class="d-flex justify-content-end mt-0 mb-0"> 
      <%= f.submit t('global.button.update') %>
    </div>
  </div>
<% end %>

<h3><%= t('.header') %></h3>

<p><%= t('.unhappy') %><%= button_to t('global.button.sign_up'), registration_path(resource_name), data: { confirm: t('global.dialog.you_sure')}, method: :delete %></p>

<%= link_to t('global.button.back'), :back %>
