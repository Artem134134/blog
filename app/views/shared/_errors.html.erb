<% if object && object.errors.any? %> 

<div class="mt-0 mb-0 row "> 
  <div class="col-sm-10 ">
    <div class="alert alert-danger" role="alert">
      <ul class="mb-0">
        <% object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div> 
</div> 
<% end %>