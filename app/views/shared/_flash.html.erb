<% if flash.any? %>
  <% flash.each do |type, message| %>
    <%= content_tag :div, message, class: "alert alert-#{bootstrap_alert_class(type)} alert-dismissible fade show", role: 'alert' do %>
      <%= content_tag :button, '', type: 'button', class: 'btn-close', data: { bs_dismiss: 'alert' }, aria: { label: 'Close' } %>
    <% end %>
  <% end %>
<% end %>