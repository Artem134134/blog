<% currently_at t('shared.navbar.contact_us') %>
<% provide :page_title, t('.tab_name') %>

<h3><span class="badge rounded-pill text-bg-secondary mb-3"><%= t('.tab_name') %></span></h3>

<% if @invalid_email %>
<div class="mt-0 mb-0 row"> 
  <div class="col-sm-10">
    <div class="alert alert-danger" role="alert">
      <ul class="mb-0">
        <li><%= t('global.errors.error_email')%></li>
      </ul>
    </div>
  </div> 
</div> 
<% end %>

<% if policy(@contact).create? %> 
  <%= render 'form_contact' %>
<% end %>