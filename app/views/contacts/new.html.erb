
  <h3><span class="badge rounded-pill text-bg-secondary"><%= t('contacts.contact_us') %></span></h3><br>

    <%= form_with model: @contact, data: {turbo: false} do |f|%>
      <% if @contact && @contact.errors.any? %>
      
        <div class="alert alert-danger" role="alert">
          <ul class="mb-0">
          <% @contact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
          <% end %>
        
        <p>
          <%= f.label :email %><br />
          <%= f.text_field :email %>
        </p>

        <p>
          <%= f.label :message %><br />
          <%= f.text_area :message %>
        </p>

        <nav>
          <%= f.submit 'Send message', class: 'btn btn-outline-primary btn-sm' %>
          <%= link_to 'Back', articles_path, class: 'btn btn-outline-light btn-sm' %>  
        </nav>
      
      <% end %>
