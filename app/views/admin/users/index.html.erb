<% provide :page_title, t('.admin_users') %>
<% currently_at t('.users') %>

<h3 class="text-center mb-3"><%= t('.admin_users') %></h3>

<div class="btn-group mb-3">
  <%= link_to t('.download'), admin_users_path(format: :zip),
    class: 'btn btn-secondary' %>
</div>

<%= pagination @pagy %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col"><%= t('.username') %></th>
      <th scope="col"><%= t('.email') %></th>
      <th scope="col"><%= t('.created_at') %></th>
      <th scope="col"><%= t('.updated_at') %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @users %>
  </tbody>
</table>

<%= pagination @pagy %>