<% provide :page_title, t('.admin_users') %>
<% currently_at t('.users') %>

<h3 class="text-center mb-3"><%= t('.admin_users') %></h3>

<%= pagination @pagy %>

<% scope = 'activerecord.attributes.user' %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col"><%= t 'username', scope: scope %></th>
      <th scope="col"><%= t 'email', scope: scope %></th>
      <th scope="col"><%= t 'role', scope: scope %></th>
      <th scope="col"><%= t 'created_at', scope: scope %></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <%= render @users %>
  </tbody>
</table>

<div class="d-grid d-md-flex justify-content-md-end mt-3 mb-3">
  <%= link_to t('.download'), admin_users_path(format: :zip),
    class: 'btn btn-outline-secondary' %>

  <%= link_to t('.registration'), new_admin_user_path,
    class: 'btn btn-outline-secondary ms-2' %>
</div>

<%= pagination @pagy %>

<h2 class="mb-3"><%= t('.upload') %></h2>

<%= form_with url: admin_users_path do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :archive, t('.select_archive') %>
    </div>

    <div class="col-sm-10">
      <%= f.file_field :archive, class: 'form-control' %>
    </div>
  </div>

<div class="d-grid d-md-flex justify-content-md-end mt-3">
  <%= f.submit t('.sub_upload'), class: 'btn btn-outline-primary' %>
</div>
<% end %>