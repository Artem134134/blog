<tr>
  <th scope="row"><%= user.id %></th>
  <td><%= user.username %></td>
  <td><%= user.email %></td>
  <td><%= user.role %></td>
  <td><%= l user.created_at, format: :long %></td>
  <td>
    <%= link_to 'Edit', edit_admin_user_path(user), data: {turbo: false}, 
      class: 'btn btn-secondary' %>

    <%= link_to 'Delete', admin_user_path(user), 
      class: 'btn btn-danger', data: { turbo_confirm: t('global.dialog.you_sure'),
        turbo_method: :delete} %>
  </td>
  
</tr>