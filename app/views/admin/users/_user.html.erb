<tr>
  <th scope="row"><%= user.id %></th>
  <td><%= user.username %></td>
  <td><%= user.email %></td>
  <td><%= t(user.role, scope: 'global.user.roles') %></td>
  <td><%= l user.created_at, format: :long %></td>
  <td>
    <%= link_to t('global.button.edit'), edit_admin_user_path(user), data: {turbo: false}, 
      class: 'btn btn-secondary' %>

    <%= link_to t('global.button.delete'), admin_user_path(user), 
      class: 'btn btn-danger', data: { turbo_confirm: t('global.dialog.you_sure'),
        turbo_method: :delete} %>
  </td>
  
</tr>